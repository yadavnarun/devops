pipeline {
    agent any
    tools{
        nodejs "node"
    }
    parameters {
        choice(name: 'VERSION', choices: ['1.1.0', '1.2.0', '1.3.0'], description: '')
        booleanParam(name: 'executeTests', defaultValue: true, description: '')
    }
    stages {
        stage("init") {
            steps {
                echo "init"
                git branch: 'main', url: 'https://github.com/yadavnarun/devops.git'
               }
            }
        stage("build") {
            steps {
                echo 'building the application...'
                dir("server") {
                    sh "pwd"
                    sh "npm i"
                    sh "npm run build"
                }
            }
        }
        stage("test") {
            when {
                expression {
                    params.executeTests
                }
            }
            steps {
                echo 'building the application...'        
                dir("server") {
                    sh "pwd"
                    sh "npm run test"
                }
            }
        }
        stage("deploy") {
            steps {
                echo 'deplying the application...'
                echo "deploying version ${params.VERSION}"
            }
        }
    }   
}
